<!-- The Home page with a link to the signup page -->


<div class="center jumbotron">
  <h1 class="welcome-text">Welcome to ChatHERbox!</h1>

  <h2 class="short-tagline">Chat and collaborate with ambitious women around the world.</h2>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up now!", new_registration_path(resource_name), class: "btn btn-lg" %>
  <% end -%>
</div>

<!-- Chatherbox logo file -->
<%#= link_to image_tag("Logo2.png", alt: "Chatherbox logo"),
            'http://rubyonrails.org/' %>

<!-- Form for logging in or signing up -->
    <div class="input-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <%= render "devise/shared/links" %>
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
      <% end %>
    </div>