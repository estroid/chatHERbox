<!-- index page -->
<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %> <!-- calls a helper for HTML shim stylesheet -->
    <link href="https://fonts.googleapis.com/css?family=Fugaz+One" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oxygen" rel="stylesheet">
  </head>

  <body>
    <%= render 'layouts/header' %> <!-- calls a helper for HTML header -->
<!-- For the main content -->
    <div class="container">
      <!--background image in css -->
      <div class="landing-content"></div>
      </div>
      <!-- yield method inserts the contents of each page into the site layout -->
      <%= yield %>
      <%= render 'layouts/footer' %> <!-- calls a helper for footer -->
    </div>
  </body>
</html>

